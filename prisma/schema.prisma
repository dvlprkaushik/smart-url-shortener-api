generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ╔══════════════════════════╗
// ║        MODEL: Url        ║
// ╚══════════════════════════╝
model Url {
  id          Int       @id @default(autoincrement())
  originalUrl String    @db.Text
  shortCode   String    @unique
  accessCount Int       @default(0)
  lastAccess  DateTime?
  createdAt   DateTime  @default(now())
  expiresAt   DateTime?
}

